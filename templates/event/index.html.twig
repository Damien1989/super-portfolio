{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-white text-center mt-5 pt-5 display-2 mb-5">Mes projets réalisés</h1>
        <div class="d-flex flex-wrap justify-content-center">
            {% for event in events %}
                <div class="text-white-50 card p-5 col-lg-5 col-md-10 col-sm-12 mx-auto mt-3 text-center">
                    <div class="card-body color-h3">
                        <h3 class="card-title mb-3">{{ event.name }}</h3></br>
                        <p class="card-text fw-light">{{ event.description }}</p>
                        <a href="{{ event.GitHub }}" class="btn bg-dark text-white">Lien gitHub</a>
                        <a href="{{ event.link }}" class="btn bg-dark text-white">Lien du site</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

